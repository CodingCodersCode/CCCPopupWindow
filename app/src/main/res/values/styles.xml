<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Animation_Popup">
        <item name="android:windowEnterAnimation">@anim/anim_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_exit</item>
    </style>

    <style name="Animation_Search_Rule_Select">
        <item name="android:windowEnterAnimation">@anim/anim_layout_search_rule_select_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_layout_search_rule_select_exit</item>
    </style>
</resources>
